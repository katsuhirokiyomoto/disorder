<% if current_user.recommend?(item) %>
  <%= form_tag(itemrelationship_path(item), method: :delete) do %>
    <%= hidden_field_tag :item_id, item.id %>
    <%= submit_tag 'unrecommend', class: 'btn btn-danger' %>
  <% end %>
<% else %>
  <%= form_tag(itemrelationships_path) do %>
    <%= hidden_field_tag :item_code, item.code %>
  <%= submit_tag 'recommend', class: 'btn btn-success' %>
  <% end %>
<% end %>
  
  